/**
 * This will add the '@Singleton' annotation to all 
 * primitive definitions used in the application 
 */
@Singleton
primitive **.* {
}

/**
 * This will add the '@Singleton' annotation to all 
 * composite definitions used in the application 
 */
@Singleton
composite **.* {
}

/**
 * This will add the '@Static' annotation to all 
 * bindings defined in the application
 */
composite **.* {
	@Static
	binds *.* to *.*;
}