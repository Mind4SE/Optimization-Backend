/**
 * This will add the '@Singleton' annotation to all 
 * primitive definitions used in the build 
 */
@Singleton
primitive **.* {
}

/**
 * This will add the '@Singleton' annotation to all 
 * composite definitions used in the build 
 */
@Singleton
composite **.* {
}

/**
 * This will add '@StaticBindings'
 * to all composite definitions used the build
 */
@StaticBindings
composite **.* {
}